(defun new-nanorobot ()
  (let ((energy 100))
    #'(lambda (n)
        (when (n-cancer n)
          (decf energy 10))
        (cond ((and (n-cancer n) (> energy 10))
                'ATTACK)
              ((and (< energy 10) (n-red-globule n))
                'RECHARGE)
              ((< energy 10)
                'STAY
              (T 'WAIT))
        )
      )
  )
)
